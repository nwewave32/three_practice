{
  "compilerOptions": {
    "target": "ES6", // 최신 JavaScript 기능 사용
    "module": "ESNext", // 모듈 시스템 설정
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // 브라우저 환경과 최신 ES 기능 사용
    "allowJs": true, // JS 파일도 허용
    "skipLibCheck": true, // 타입 검사 속도 향상을 위해 라이브러리 검사 생략
    "strict": true, // 엄격한 타입 검사
    "forceConsistentCasingInFileNames": true, // 파일 이름 대소문자 일관성
    "noEmit": true, // 컴파일 결과물 생성하지 않음
    "esModuleInterop": true, // CommonJS 모듈 호환
    "moduleResolution": "node", // Node.js 방식의 모듈 해석
    "resolveJsonModule": true, // JSON 파일 import 지원
    "isolatedModules": true, // Babel과 같은 도구 사용 시 호환성
    "jsx": "react-jsx", // React와 React Three Fiber 호환 JSX
    "types": ["@react-three/fiber"] // React Three Fiber의 타입 지원
  },
  "include": [
    "src" // 프로젝트 소스 경로
  ],
  "exclude": [
    "node_modules" // 빌드 제외 경로
  ]
}
